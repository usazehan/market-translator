# Example environment variables
HF_HOME=.hf_cache
HF_TOKEN=your_huggingface_token_here

# eBay
EBAY_BASE_URL="https://api.sandbox.ebay.com"     # prod: https://api.ebay.com
EBAY_CLIENT_ID=""
EBAY_CLIENT_SECRET=""
EBAY_REFRESH_TOKEN=""
EBAY_MARKETPLACE_ID="EBAY_US"

# Optional policy overrides (otherwise the client auto-picks the first policy)
# EBAY_PAYMENT_POLICY_ID=""
# EBAY_RETURN_POLICY_ID=""
# EBAY_FULFILLMENT_POLICY_ID=""

# Optional default category
# EBAY_DEFAULT_CATEGORY_ID="9355"  # example

# LWA (Login with Amazon)
LWA_CLIENT_ID=amzn1.application-oa2-client.xxxxx
LWA_CLIENT_SECRET=xxxxxxxx
LWA_REFRESH_TOKEN=Atzr|xxxxxxxx

# Core SP-API config
SPAPI_HOST=https://sellingpartnerapi-na.amazon.com     # or -eu, -fe
SELLER_ID=A3ABCDEF123456
MARKETPLACE_IDS=ATVPDKIKX0DER                          # comma list supported

# Optional
SPAPI_USER_AGENT=market-translator/0.1 (Language=Python)
SPAPI_ISSUE_LOCALE=en_US

SPAPI_SCHEMA_VALIDATE=1
